<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="leftText" format="string" />
    <attr name="leftTextColor" format="color" />
    <attr name="rightText" format="string" />
    <attr name="rightTextColor" format="color" />
    <attr name="rightIcon" format="reference" />

    <declare-styleable name="TitleBar">
        <attr name="backgroundColor" format="color" />
        <attr name="leftIcon" format="reference" />
        <attr name="centerText" format="string" />
        <attr name="centerTextColor" format="color" />
        <attr name="rightIcon" />
        <attr name="rightText" />
        <attr name="rightTextColor" />
        <attr name="isLineShow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SearchBar">
        <attr name="searchBarHint" format="string"/>
    </declare-styleable>

    <declare-styleable name="SettingRouterBar">
        <attr name="leftText" />
        <attr name="leftTextColor" />
        <attr name="rightText" />
        <attr name="rightTextColor" />
        <attr name="rightIcon" />
    </declare-styleable>

    <declare-styleable name="SettingSwitchBar">
        <attr name="leftText" />
        <attr name="leftTextColor" />
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="progressBackgroundDrawable" format="reference"/>
        <attr name="progressDrawable" format="reference"/>
    </declare-styleable>
</resources>